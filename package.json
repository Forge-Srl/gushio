{
  "name": "gushio",
  "version": "0.6.0",
  "description": "Like bash scripts, but in JavaScript",
  "keywords": [
    "cli",
    "terminal",
    "scripting",
    "script",
    "shell",
    "bash",
    "cmd",
    "command-line",
    "command",
    "commander",
    "prompt",
    "argument",
    "args",
    "argv",
    "multiplatform",
    "automation"
  ],
  "homepage": "https://github.com/Forge-Srl/gushio#readme",
  "author": "Forge S.r.l.",
  "license": "MIT",
  "maintainers": [
    {
      "name": "Tommaso Bossi",
      "email": "tommaso.bossi@forge.srl"
    }
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/Forge-Srl/gushio.git"
  },
  "bugs": {
    "url": "https://github.com/Forge-Srl/gushio/issues"
  },
  "type": "module",
  "main": "cli/cliProgram.js",
  "bin": {
    "gushio": "cli/cli.js"
  },
  "scripts": {
    "test": "node --trace-warnings --experimental-vm-modules node_modules/jest/bin/jest.js --coverage",
    "lint": "eslint .",
    "prerelease": "npm test && npm run lint",
    "release": "standard-version",
    "postrelease": "git push --follow-tags",
    "sample:sample1": "node cli/cli.js -c tests/samples/sample1.js someQuix --baz boom",
    "sample:http-cat": "node cli/cli.js -c examples/http-cat.js"
  },
  "files": [
    "/cli",
    "/runner",
    "/utils",
    "/README.md",
    "/LICENSE.md"
  ],
  "dependencies": {
    "commander": "9.0.0",
    "enquirer": "2.3.6",
    "shelljs": "0.8.5",
    "ansi-colors": "4.1.1",
    "ora": "6.0.1",
    "node-fetch": "3.2.0",
    "require-from-string": "2.0.2",
    "fs-extra": "10.0.0",
    "glob": "7.2.0",
    "yaml": "2.0.0-10",
    "semver": "7.3.5",
    "is-string": "1.0.7"
  },
  "devDependencies": {
    "eslint": "^8.8.0",
    "jest": "^27.4.7",
    "jest-worker": "^27.4.6",
    "mock-http-server": "^1.4.5",
    "standard-version": "^9.3.2"
  },
  "engines": {
    "node": "^14 || >=16"
  },
  "jest": {
    "transform": {},
    "resetMocks": true,
    "resetModules": true,
    "moduleNameMapper": {
      "#ansi-styles": "chalk/source/vendor/ansi-styles/index.js",
      "#supports-color": "chalk/source/vendor/supports-color/index.js"
    },
    "collectCoverageFrom": [
      "**/*.{js,cjs,mjs}",
      "!**/node_modules/**",
      "!**/examples/**",
      "!**/tests/**",
      "!**/coverage/**",
      "!**/.eslintrc.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 85,
        "functions": 90,
        "lines": 90,
        "statements": 90
      }
    }
  },
  "standard-version": {
    "header": "Gushio - CHANGELOG\n---",
    "tag-prefix": "release/"
  }
}
